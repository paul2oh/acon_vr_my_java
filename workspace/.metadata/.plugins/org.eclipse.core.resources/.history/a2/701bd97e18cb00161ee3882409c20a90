package javastart.a01_hello;

public class A02_variable {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		/*
		 * 변수 : 특정한 데이터에 따라서 결과물이 다르게 처리될 때,
		 * 		  사용하는 데이터형태..
		 * 		  크게 문자열을 저장하는 데이터 : String
		 * 		  숫자를 저장하는 데이터 : int
		 */
		
		/*
		 * 프로그램 예제..
		 * 
		 * 입력한 이름과 나이를 아래 형식으로 출력하세요
		 * 
		 * =============================
		 * 이름 : @@@@ @-- 변수
		 * 나이 : @@@
		 * ============================
		 */
		//변수는 type선언 이 변수의 이름을 정하며, 
		//특정data를 할당한다.
		//type이 지정되면 할당할 수 있는 데이터만 넣어야 된다.
		//변수는 변경도 가능하고, 재활용을 할 수 있다.
		String name = "홍길동";
		int age =24;
		
		System.out.println("=========");
		System.out.println("이름 : "+name+"");
		System.out.println("나이 : "+age);
		System.out.println("=========");
		name = "신길동";
		System.out.println("이름 : "+name+"");
	}

}
